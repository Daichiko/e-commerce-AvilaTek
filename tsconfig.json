{
    "compilerOptions": {
      "target": "ES2020",         
      "module": "CommonJS",       
      "rootDir": "./src",
      "strict": false,            
      "esModuleInterop": true,    
      "skipLibCheck": true,       
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "baseUrl": "./src",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "paths": {
        "@entities/*": ["./common/entities/*"],
      },
    },
    "include": [
      "src/**/*"                
    ],
    "exclude": [
      "node_modules",       
    ],
    "watch": true
  }